<?xml version="1.0" encoding="UTF-8" ?>

 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suph.security.core.userdetails.jdbc.dao.AuthDAO">
	<resultMap type="com.suph.security.core.userdetails.jdbc.vo.AuthVO" id="AuthVO">
		<result column="AUTH_NO" property="no"/>	<!-- 권한 일련 번호 -->
		<result column="AUTH_NM" property="name"/>	<!-- 권한명 -->
		<result column="AUTH_EXPLANATION" property="explanation"/>	<!-- 권한 설명 -->
	</resultMap>

	<select id="getAuthListByNo" parameterType="int" resultMap="AuthVO">
		SELECT
			A.AUTH_NO,
			A.AUTH_NM,
			A.AUTH_EXPLANATION
		FROM
				TB_AUTH AS A
			INNER JOIN TB_MEMBER_AUTH AS MO ON (A.AUTH_NO = MO.AUTH_NO)
			INNER JOIN TB_MEMBER AS MT ON (MO.MEM_NO = MT.MEM_NO)
		WHERE
				MT.MEM_ENABLE = 'Y'
			AND
				MT.MEM_NO = #{value};
	</select>
</mapper>