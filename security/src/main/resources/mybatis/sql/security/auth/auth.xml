<?xml version="1.0" encoding="UTF-8" ?>

 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suph.security.core.dao.AuthDAO">
	<resultMap type="com.suph.security.core.dto.AuthDTO" id="AuthDTO">
		<result column="AUTH_NO" property="no"/>	<!-- 권한 일련 번호 -->
		<result column="AUTH_NM" property="name"/>	<!-- 권한명 -->
		<result column="AUTH_EXPLANATION" property="explanation"/>	<!-- 권한 설명 -->
	</resultMap>
	
	<!-- 모든 권한 목록 조회 -->
	<select id="getAuthList" resultMap="AuthDTO">
		SELECT * FROM TB_AUTH
	</select>
</mapper>